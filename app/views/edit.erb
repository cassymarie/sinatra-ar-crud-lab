<h1>Edit <%= @article.title %></h1>

<form method="POST" action="/articles/<%= @article.id %>">

     <input type="hidden" name="_method" value="PATCH">
     <label>Title: <input type="text" id="title" name="article[title]" value="<%= @article.title%>"/></label>
     <label>Content: <input type="text" id="content"  name="article[content]" value="<%= @article.content%>"/>
     <input type="submit"  id="submit" value="Edit Article">
</form>
